<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".StatisticsActivity">

    <TextView
            android:id="@+id/title_stats_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:text="@string/stats_title"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="10dp"
            android:textStyle="bold"
            android:textSize="20sp"
    />
    <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/chart_id"
            android:layout_width="match_parent"
            android:layout_height="350dp"
            android:layout_margin="15dp"
            app:layout_constraintTop_toBottomOf="@id/title_stats_id"
            app:layout_constraintLeft_toLeftOf="parent"
    />

    <TextView
            android:id="@+id/current_closest_text_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/chart_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:text="@string/most_closest_devices_in_meter"
            android:layout_marginStart="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <TextView
            android:id="@+id/first_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/first"
            app:layout_constraintTop_toBottomOf="@id/current_closest_text_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <TextView
            android:id="@+id/second_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/next"
            app:layout_constraintTop_toBottomOf="@id/first_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <TextView
            android:id="@+id/third_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/third"
            app:layout_constraintTop_toBottomOf="@id/second_id"
            app:layout_constraintLeft_toLeftOf="parent"
            android:layout_marginStart="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <TextView
            android:id="@+id/first_value_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dist_init_val"
            app:layout_constraintTop_toBottomOf="@id/current_closest_text_id"
            app:layout_constraintLeft_toRightOf="@id/first_id"
            android:layout_marginStart="@dimen/margin_between_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"

    />

    <TextView
            android:id="@+id/second_value_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dist_init_val"
            app:layout_constraintTop_toBottomOf="@id/first_id"
            app:layout_constraintLeft_toRightOf="@id/second_id"
            android:layout_marginStart="@dimen/margin_between_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <TextView
            android:id="@+id/third_value_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/dist_init_val"
            app:layout_constraintTop_toBottomOf="@id/second_id"
            app:layout_constraintLeft_toRightOf="@id/third_id"
            android:layout_marginStart="@dimen/margin_between_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <!-- Date and Time -->
    <TextView
            android:id="@+id/first_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_init_value"
            app:layout_constraintTop_toBottomOf="@id/current_closest_text_id"
            app:layout_constraintRight_toLeftOf="@id/first_time_id"
            android:layout_marginEnd="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"

    />

    <TextView
            android:id="@+id/second_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_init_value"
            app:layout_constraintTop_toBottomOf="@id/first_id"
            app:layout_constraintRight_toLeftOf="@id/second_time_id"
            android:layout_marginEnd="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <TextView
            android:id="@+id/third_date_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/date_init_value"
            app:layout_constraintTop_toBottomOf="@id/second_id"
            app:layout_constraintRight_toLeftOf="@id/third_time_id"
            android:layout_marginEnd="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <TextView
            android:id="@+id/first_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_init_value"
            app:layout_constraintTop_toBottomOf="@id/current_closest_text_id"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"

    />

    <TextView
            android:id="@+id/second_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_init_value"
            app:layout_constraintTop_toBottomOf="@id/first_id"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <TextView
            android:id="@+id/third_time_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/time_init_value"
            app:layout_constraintTop_toBottomOf="@id/second_id"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/margin_side_dimens"
            android:layout_marginTop="@dimen/margin_top_bottom_dimens"
    />

    <Button
            android:id="@+id/stats_btn_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            android:text="@string/go_back_to_main_screen"
            android:layout_marginBottom="15dp"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:background="@drawable/button_style"
            android:textColor="@color/text_white"
            android:onClick="goBackToMainActivity"
    />
</androidx.constraintlayout.widget.ConstraintLayout>